		timerlay = setTimeout(function() {
		   if (document.getElementById("inputlayoutaddfs")) {get_filtered_fiche_layout(document.getElementById("inputlayoutaddfs").value);}
		}, 1000);
	}
	var timerlay;
	var xhrgllay;
</script>