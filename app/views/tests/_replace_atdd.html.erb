<form onsubmit="setrempatddidsearch();startloader();" method="post">
	<input type="hidden" name="atddsteps" value="<%=@atddsteps%>"/> 
	<input type="hidden" value="<%= form_authenticity_token() %>" name="authenticity_token"/>
	<span class="textStyle"><%= t('ecr_test.remplacer_atdd_recherchee_par') %></span><br> 
	  
	<input type="hidden" id="rempatdd_id" name="rempatdd_id" value=""/>
	<input class="inputbox" list="remplatdds" id="inputremplatdds" name="remplatdds" value="<%= @remplatdds %>" onchange="showvalidbtn();" onclick="this.value='';">
	<datalist id="remplatdds">
	<% @latddsteps.each do |latddstep| %> 
		  <OPTION id="<%= latddstep.id %>" value="<%= latddstep.description.gsub("\r"," ").gsub("\n"," ") %> (#<%= latddstep.id %>)">
	<% end %>
	</datalist>
	  
	<input type="hidden" name="mode"  value="<%= @mode %>"/>
	<input type="hidden" name="fatdd_id"  value="<%= @filtreatdd %>"/>    
	<input type="hidden" id="testlist" name="testlist"  value=""/>
	<input type="hidden" name="latdds" value="<%= @latdds %>"/> 
	<input type="hidden" name="testname"  value="<%= @filtrename %>"/>    
	<input type="hidden" name="testtype"  value="<%= @filtretype %>"/>    
	<input type="hidden" name="testlevel"  value="<%= @filtrelevel %>"/>    
	<input type="hidden" name="teststate"  value="<%= @filtrestate %>"/>  
	<input type="hidden" name="atddsteps" value="<%=@atddsteps%>"/>
	<input type="hidden" name="proc_id" value="<%= @filtreproc %>"/>
	<input type="hidden" name="procs" value="<%= @procs %>"/>
	<input value="" id="btnval" type="submit" class="btnvalid" title="<%= t('valider') %>" vertical-align="middle" onclick="buildtestidstring();" <% if @remplatdds.to_s == "" %>style="display: none"<% end %>/>
</form> 
